<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_7dp"
    app:cardElevation="@dimen/_3dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5dp"
                android:layout_marginTop="@dimen/_2dp"
                android:fontFamily="@font/inner_bold"
                android:text="@string/kaju_paneer_sabji"
                android:textColor="@color/name_text"
                app:layout_constraintStart_toEndOf="@+id/iv_image"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/_10"
                android:textColor="@color/name_text"
                app:layout_constraintStart_toEndOf="@+id/iv_image"
                app:layout_constraintTop_toBottomOf="@+id/tv_menu" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cart"
            android:layout_width="@dimen/_90dp"
            android:layout_height="@dimen/_50dp"
            android:background="@drawable/kaju_images">

            <ImageView
                android:id="@+id/btn_cart"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_25dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginTop="@dimen/_25dp"
                android:layout_marginStart="@dimen/_17dp"
                android:src="@drawable/addition"
                android:visibility="visible" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_quantity"
            android:layout_width="@dimen/_90dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tvDecrement"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_55dp"
                android:layout_marginStart="@dimen/_5dp"
                android:src="@drawable/ic_baseline_remove_24" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_conuting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_13dp"
                android:text="0"
                android:textSize="@dimen/_20sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tv_increment"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_55dp"
                android:layout_marginStart="@dimen/_10dp"
                android:src="@drawable/ic_baseline_add_24" />


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>