<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5"
    app:cardElevation="@dimen/_3"
    android:padding="@dimen/_3"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5"
            app:cardElevation="@dimen/_5"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/_90"
                android:layout_height="@dimen/_100"
                android:src="@color/gold"
                android:transitionName="@string/object_image"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_3">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5"
                android:text="Abc"
                android:textColor="@color/black"
                android:textSize="@dimen/_17"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5"
                android:maxLines="2"
                android:text="@string/shopdetails"
                android:textSize="@dimen/_12" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/rate"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5"
                    android:progressTint="@color/golden"
                    android:rating="2.4" />

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10"
                    android:layout_marginTop="@dimen/_5"
                    android:layout_toEndOf="@id/rate"
                    android:text="(2.5)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/_5"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:drawableTint="@color/background"
                android:minLines="1"
                android:singleLine="true"
                android:text="address"
                android:textSize="@dimen/_12" />

        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>