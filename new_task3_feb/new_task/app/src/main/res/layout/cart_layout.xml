<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10"
    app:cardElevation="@dimen/_5"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/_170"
            android:layout_height="@dimen/_170"
            android:src="@color/background_tra" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10">

            <TextView
                android:id="@+id/tv_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camara"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_5"
                android:textSize="@dimen/_20"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Des"
                android:layout_marginTop="@dimen/_5"
                android:textSize="@dimen/_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textColor="@color/golden"
                android:layout_marginTop="@dimen/_5"
                android:textSize="@dimen/_17"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_plus"
                        android:layout_width="@dimen/_30"
                        android:layout_height="@dimen/_30"
                        android:text="@string/plus"
                        android:textAlignment="center"
                        android:textSize="@dimen/_20"
                        android:gravity="center"
                        android:textColor="@color/background_tra"
                        android:textStyle="bold"
                        android:background="@drawable/counterbutton"
                        android:layout_marginTop="@dimen/_10" />
                    <TextView
                        android:id="@+id/tv_counter"
                        android:text="1"
                        android:textSize="@dimen/_20"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_toEndOf="@id/tv_plus"
                        android:layout_marginTop="@dimen/_10"
                        android:layout_marginLeft="@dimen/_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_minus"
                        android:layout_width="@dimen/_30"
                        android:layout_height="@dimen/_30"
                        android:text="-"
                        android:textSize="@dimen/_20"
                        android:gravity="center"
                        android:textColor="@color/background_tra"
                        android:textStyle="bold"
                        android:background="@drawable/counterbutton"
                        android:layout_marginLeft="@dimen/_10"
                        android:layout_marginTop="@dimen/_10"
                        android:layout_toEndOf="@+id/tv_counter"/>
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>