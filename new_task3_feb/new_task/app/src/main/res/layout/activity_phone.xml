<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PhoneActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/phone_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_100d"
                android:layout_height="@dimen/_100d"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_phonelink_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="157dp"
                android:text="@string/send_code"
                android:textColor="@color/white"
                android:textSize="@dimen/_20"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_marginTop="@dimen/_10"
                android:layout_marginLeft="@dimen/_10"
                android:padding="@dimen/_10"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:tint="@color/white" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="@dimen/_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <TextView
            android:id="@+id/information"
            android:text="Personal Information"
            android:textSize="@dimen/_20"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <View

                android:layout_marginRight="@dimen/_30"
                android:layout_marginLeft="@dimen/_30"
                android:layout_below="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1"
                android:background="@color/gry_tra"
                android:layout_marginTop="@dimen/_10"/>

            <com.google.android.material.card.MaterialCardView
            android:id="@+id/material_cardview"
            android:layout_below="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5"
            app:cardElevation="@dimen/_5"
            android:layout_marginTop="@dimen/_20"
            android:layout_marginBottom="@dimen/_10"
            app:cardUseCompatPadding="true">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_70"
                android:layout_height="@dimen/_70"
                app:cardCornerRadius="@dimen/_5"
                app:cardElevation="@dimen/_5"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/_91"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70"
                android:layout_marginLeft="@dimen/_62"
                app:cardCornerRadius="@dimen/_5"
                app:cardElevation="@dimen/_5"
                app:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/et_phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10"
                    android:background="@null"
                    android:hint="@string/phone_number"
                    android:inputType="number"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_15"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

        </com.google.android.material.card.MaterialCardView>
          <View
              android:layout_marginRight="@dimen/_30"
              android:layout_marginLeft="@dimen/_30"
              android:layout_below="@+id/material_cardview"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_1"
              android:background="@color/gry_tra"
              android:layout_marginBottom="@dimen/_10"/>

            <TextView
                android:id="@+id/line"
                android:layout_marginTop="@dimen/_30"
                android:layout_below="@+id/material_cardview"
                android:text="@string/information"
                android:textColor="@color/gry_tra2"
                android:textStyle="bold"
                android:textSize="@dimen/_15"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/right"
                android:layout_marginTop="@dimen/_30"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/line"
                android:background="@drawable/active_indecater"
                android:layout_width="@dimen/_50"
                android:layout_height="@dimen/_50">

                <ImageView
                    android:id="@+id/right_icon"
                    android:layout_marginLeft="@dimen/_10"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_width="@dimen/_30"
                    android:layout_height="@dimen/_30"
                    app:tint="@color/white" />


            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>


</LinearLayout>