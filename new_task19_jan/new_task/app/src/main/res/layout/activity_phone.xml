<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PhoneActivity">


   <LinearLayout
       android:background="@drawable/phone_background"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_gravity="center"
       android:layout_weight="1">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:layout_width="@dimen/_100d"
               android:layout_height="@dimen/_100d"
               android:layout_centerInParent="true"
               android:src="@drawable/ic_baseline_phonelink_24"
               app:tint="@color/white" />
       </RelativeLayout>

   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10"
        android:orientation="horizontal"
        android:layout_weight="1">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="@dimen/_5"
            app:cardCornerRadius="@dimen/_5">
            <androidx.cardview.widget.CardView
                app:cardElevation="@dimen/_5"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_5"
                android:layout_width="@dimen/_70"
                android:layout_height="@dimen/_70">
                <TextView
                    android:text="@string/_91"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_20"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="@dimen/_5"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_5"
                android:layout_marginLeft="@dimen/_60"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70">
                <EditText
                    android:hint="Phone Number"
                    android:layout_marginLeft="@dimen/_10"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15"
                    android:inputType="number"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </androidx.cardview.widget.CardView>

        </com.google.android.material.card.MaterialCardView>




    </LinearLayout>




</LinearLayout>