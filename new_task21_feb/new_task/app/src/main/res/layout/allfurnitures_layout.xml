<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5"
    app:cardElevation="@dimen/_3"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_170"
            android:layout_height="@dimen/_100d"
            app:cardCornerRadius="@dimen/_5"
            app:cardElevation="@dimen/_3"
            android:background="@color/white_tra"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/_100d"
                android:layout_height="@dimen/_100"
                android:layout_gravity="center"
                android:src="@color/white_tra" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:paddingLeft="@dimen/_5d"
            android:paddingRight="@dimen/_5d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_tital"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="@dimen/_5"
                android:text="@string/kitchen"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="@dimen/_12"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:drawableLeft="@drawable/ic_round_star_24"
                android:text="2.5"
                android:textColor="@color/black"
                android:textSize="@dimen/_12"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>