<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10dp"
    app:cardElevation="@dimen/_10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_4dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginRight="@dimen/_4dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="@dimen/_200dp"
            android:layout_height="@dimen/_125dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/wedding_image"
            app:shapeAppearance="@style/CornerCut" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_10dp"
                android:ellipsize="end"
                android:fontFamily="@font/inner_medium"
                android:text="@string/umang"
                android:textColor="@color/name_text"
                android:textSize="@dimen/_13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:fontFamily="@font/inner_medium"
                    android:text="@string/paris"
                    android:textColor="@color/contry_text"
                    android:textSize="@dimen/_11sp" />

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_120dp"
                    android:gravity="right"
                    android:src="@drawable/ic_star" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/retting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="right"
                    android:text="@string/_4_2"
                    android:textColor="@color/name_text"
                    android:textSize="@dimen/_11sp" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_7dp"
                android:fontFamily="@font/inner_semibold"
                android:text="@string/_8000"
                android:textColor="@color/price_text"
                android:textSize="@dimen/_13sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>