<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_snackbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_8dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/_5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/teal_200">

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15dp"
            android:text="@string/_0_item"
            android:textColor="@color/name_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="@dimen/_1dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_10dp"
            android:background="@color/name_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_item"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/line_icon" />

        <TextView
            android:id="@+id/tv_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:text="@string/_0_0"
            android:textColor="@color/name_text"
            app:layout_constraintBottom_toBottomOf="@+id/tv_item"
            app:layout_constraintStart_toEndOf="@+id/iv_line"
            app:layout_constraintTop_toTopOf="@+id/tv_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>