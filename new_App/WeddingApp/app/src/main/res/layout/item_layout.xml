<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_item_image"
        android:layout_width="@dimen/_80dp"
        android:layout_height="@dimen/_80dp"
        android:adjustViewBounds="true"
        android:padding="@dimen/_16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/wedding_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/item_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/cloths"
        android:textAlignment="center"
        android:textColor="@color/name_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_image"
        app:layout_constraintStart_toStartOf="@+id/iv_item_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_image" />


</androidx.constraintlayout.widget.ConstraintLayout>