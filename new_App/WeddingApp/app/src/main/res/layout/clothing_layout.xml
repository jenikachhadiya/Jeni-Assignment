<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10dp"
    app:cardElevation="@dimen/_10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_4dp"
        android:layout_marginTop="@dimen/_2dp"
        android:layout_marginRight="@dimen/_4dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/wedding_image"
            app:shapeAppearance="@style/CornerCut" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/iv_dress_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/wedding_dress"
            android:textColor="@color/name_text"
            android:textSize="@dimen/_13sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/iv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/_4dp"
            android:fontFamily="@font/inner_semibold"
            android:text="@string/_8000"
            android:textColor="@color/price_text"
            android:textSize="@dimen/_13sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>